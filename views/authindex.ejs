<!doctype html>
<html lang="en" ng-app="awesomeBlog">
<head>
  <meta charset="utf-8">
  <title>Awesome Blog</title>
  <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.css">
  <% if(env === "development"){ %>
  	<link rel="stylesheet" href="/css/app.css">
  <% } else { %>
  	<link rel="stylesheet" href="/css/app.min.css">
  <% } %>
  <script src="/libs/angular/angular.min.js"></script>
  <script src="/libs/angular-route/angular-route.min.js"></script>
  <% if(env === "development"){ %>
  	<script src="/js/app.js"></script>
  	<script src="/js/controllers.js"></script>
  <% } else { %>
  	<script src="/jsmin/app.min.js"></script>
  	<script src="/jsmin/controllers.min.js"></script>
  <% } %>    
  <script>
   window.GLOBALS = {
    localEmail: '<%= localEmail || "" %>',
   	localId: "<%= localId || '' %>",
   	localPassword: "<%= localPassword || '' %>",
   	
   	fbEmail: "<%= fbEmail || ''  %>",
   	fbId: "<%= fbId || ''  %>",
   	fbToken: "<%= fbToken || ''  %>",
   	fbName: "<%= fbName || ''  %>",
   	
	tEmail: "<%= tEmail || ''  %>",
   	tId: "<%= tId || ''  %>",
   	tToken: "<%= tToken || ''  %>",
   	tName: "<%= tName || ''  %>",
	
	gEmail: "<%= gEmail || ''  %>",
   	gId: "<%= gId || ''  %>",
   	gToken: "<%= gToken || ''  %>",
   	gName: "<%= gName || ''  %>"	   	
   }
  </script>  
</head>
<body>
  <div ng-view></div>
</body>
</html>
